# Server configuration
PORT=8084
ENVIRONMENT=development
LOG_LEVEL=info

# PostgreSQL configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=circleConnect

# MongoDB configuration
MONGO_URI=mongodb://mongodb:27017
MONGO_DB=circleconnect_search

# Redis configuration
REDIS_URL=redis://redis:6380
REDIS_HOST=redis
REDIS_PORT=6380
REDIS_PASSWORD=

# Security
JWT_SECRET_KEY=replace_with_secure_secret_in_production
SERVICE_API_KEY=replace_with_secure_api_key_in_production

# External Services
USER_SERVICE_URL=http://user-service:4001/api

# Note: For local development outside Docker, you may need to change:
# - POSTGRES_HOST to localhost
# - REDIS_HOST to localhost
# - MONGO_URI to mongodb://localhost:27017
# - USER_SERVICE_URL to http://localhost:4001/api 